{
	"compilerOptions": {
		"paths": {
			"~*": ["src/*"]
		},
		"typeRoots": ["src/@types"],
		"module": "CommonJS",
		"declaration": false,
		"esModuleInterop": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"target": "ESNext",
		"outDir": "./dist",
		"baseUrl": "./",
		"skipLibCheck": true,
		"strictNullChecks": false,
		"noImplicitAny": false,
		"strictBindCallApply": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false
	},
	"include": ["src/*"],
	"exclude": ["dist/*"]
}
