{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"noImplicitAny": false,
		"ignoreDeprecations": "5.0",
		"types": ["vite/client"]
	},
	"references": [
		{
			"path": "./tsconfig.config.json"
		}
	],
	"include": ["env.d.ts", "./src/**/*", "./src/**/*.vue"],
	"exclude": ["dist/*"]
}
